generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  DRIVER
}

enum TransactionType {
  BUY
  SELL
  FUEL
  PALTI
  WEIGHT_LOSS
  SHOP_BUY
  DEBIT_NOTE
  CREDIT_NOTE
  SALARY_PAYMENT
  ADVANCE_PAYMENT
}

enum VehicleStatus {
  ACTIVE
  MAINTENANCE
  INACTIVE
}

enum ExpenseType {
  CASH
  BANK
}

enum CashToBankOperation {
  DEPOSIT
  WITHDRAW
}

model User {
  id           String   @id @default(uuid())
  mobile       String   @unique
  passwordHash String
  name         String
  role         Role     @default(DRIVER)
  status       String   @default("ACTIVE")
  baseSalary   Decimal? @default(0) // Added for Salary
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  transactions Transaction[]
  vehicle      Vehicle?      @relation(fields: [vehicleId], references: [id])
  vehicleId    String?

  @@map("users")
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  mobile    String   @unique
  address   String?
  balance   Decimal  @default(0.00) // Positive = Due, Negative = Advance
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  transactions Transaction[]

  @@map("customers")
}

model Vehicle {
  id             String        @id @default(uuid())
  registration   String        @unique
  currentKm      Int           @default(0)
  status         VehicleStatus @default(ACTIVE)
  imageUrl       String?       // Last fuel slip image URL
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  // Relations
  drivers      User[]
  transactions Transaction[]

  @@map("vehicles")
}

model Transaction {
  id         String          @id @default(uuid())
  type       TransactionType
  subType    String? // MORTALITY, WASTE, etc.
  amount     Decimal // Weight (KG) or Liters
  unit       String // KG, LITRE, COUNT
  rate       Decimal? // Price per unit
  totalAmount Decimal? // Total value
  companyName String? // Company name for buy/sell

  paymentCash Decimal? @default(0)
  paymentUpi  Decimal? @default(0)

  // Context
  date      DateTime @default(now())
  details   String?
  imageUrl  String?
  location  String?
  gpsLat    Float?
  gpsLng    Float?

  // Relations
  driver       User      @relation(fields: [driverId], references: [id])
  driverId     String
  customer     Customer? @relation(fields: [customerId], references: [id])
  customerId   String?
  vehicle      Vehicle?  @relation(fields: [vehicleId], references: [id])
  vehicleId    String?
  
  // Palti Specific
  transferDriverName String?
  paltiAction        String? // ADD or SUBTRACT

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("transactions")
}

model Notification {
  id        String   @id @default(uuid())
  message   String
  date      DateTime @default(now())
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("notifications")
}

model Expense {
  id          String      @id @default(uuid())
  type        ExpenseType // CASH or BANK
  amount      Decimal
  description String
  category    String?     // Optional: Rent, Salary, Utilities, etc.
  date        DateTime    @default(now())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("expenses")
}


model CashToBank {
  id String @id @default(uuid())
  amount Decimal @default(0)
  bankName String
  operation CashToBankOperation @default(DEPOSIT)
  date DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("cash_to_bank")
}